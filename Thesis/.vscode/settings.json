{
    "remark.format": {
        "options.listItemIndent": "one"
    },
    "latex-workshop.latex.autoBuild.run": "never",
    "markdownlint.run": "onSave",
    "githubPullRequests.remotes":[
        "origin",
        "upstream",
        "main"
    ],
    "cSpell.enabled": true,
    "cSpell.dictionaries": [
        "el"
    ],
    "cSpell.words": [
        "παρεισφρύει",
        "Σγάρμπας",
        "υποπεδίου"
    ],

    "[markdown]": {
        "editor.fontFamily": "'Segoe UI'",
        "editor.fontSize": 15
    },

    "workspaceKeybindings.buildPandoc.enabled": true,
    "editor.fontVariations": false
}